# AWS Elastic Beanstalk Environment Variables
# Copy this to env.yaml and fill in your actual values
# DO NOT commit env.yaml to git!

option_settings:
  aws:elasticbeanstalk:application:environment:
    # Server Configuration
    NODE_ENV: production
    PORT: 5000
    API_VERSION: v1

    # Database Configuration (Option 1: Connection String)
    DATABASE_URL: postgresql://username:password@your-rds-endpoint.rds.amazonaws.com:5432/sengp_db

    # Database Configuration (Option 2: Individual Variables)
    # DB_HOST: your-rds-endpoint.rds.amazonaws.com
    # DB_PORT: 5432
    # DB_NAME: sengp_db
    # DB_USER: admin
    # DB_PASSWORD: your_password
    # DB_SSL: true

    # JWT Configuration
    JWT_SECRET: your-super-secret-jwt-key-change-this-in-production
    JWT_REFRESH_SECRET: your-refresh-secret-key-change-this
    JWT_EXPIRES_IN: 24h
    JWT_REFRESH_EXPIRES_IN: 7d

    # Redis Configuration (Optional - use ElastiCache if needed)
    REDIS_HOST: your-elasticache-endpoint.cache.amazonaws.com
    REDIS_PORT: 6379
    REDIS_PASSWORD: your-redis-password
    REDIS_DB: 0

    # AWS S3 Configuration
    AWS_ACCESS_KEY_ID: your-aws-access-key-id
    AWS_SECRET_ACCESS_KEY: your-aws-secret-access-key
    AWS_REGION: eu-west-1
    AWS_S3_BUCKET: sengp-storage

    # Email Configuration (SendGrid)
    SENDGRID_API_KEY: your-sendgrid-api-key
    FROM_EMAIL: noreply@sengp.com
    FROM_NAME: SEN GP

    # SMS Configuration (Twilio)
    TWILIO_ACCOUNT_SID: your-twilio-account-sid
    TWILIO_AUTH_TOKEN: your-twilio-auth-token
    TWILIO_PHONE_NUMBER: +1234567890

    # Payment Providers
    WAVE_API_KEY: your-wave-api-key
    WAVE_API_SECRET: your-wave-api-secret
    WAVE_MERCHANT_ID: your-merchant-id

    ORANGE_MONEY_CLIENT_ID: your-client-id
    ORANGE_MONEY_CLIENT_SECRET: your-client-secret
    ORANGE_MONEY_MERCHANT_KEY: your-merchant-key

    FREE_MONEY_API_KEY: your-free-money-api-key
    FREE_MONEY_MERCHANT_ID: your-merchant-id

    # Google Maps API
    GOOGLE_MAPS_API_KEY: your-google-maps-api-key

    # Firebase Cloud Messaging
    FCM_SERVER_KEY: your-fcm-server-key
    FCM_PROJECT_ID: your-project-id

    # Application URLs
    FRONTEND_URL: https://your-frontend-domain.com
    ADMIN_URL: https://admin.your-domain.com
    API_URL: https://api.your-domain.com

    # Security
    BCRYPT_ROUNDS: 12
    RATE_LIMIT_WINDOW_MS: 900000
    RATE_LIMIT_MAX_REQUESTS: 100

    # Platform Settings
    PLATFORM_COMMISSION_PERCENTAGE: 10
    INSURANCE_FEE_PERCENTAGE: 2
    MIN_WITHDRAWAL_AMOUNT: 5000

    # File Upload
    MAX_FILE_SIZE: 5242880
    MAX_FILES_PER_UPLOAD: 5

    # Monitoring
    LOG_LEVEL: info
